 void esperar(int *p, int *r)
 {
 
 	int *pNuevo;
 	int *rNuevo;
 	
 	pNuevo=p;
 	rNuevo=r;
 
	
	printf("\ningrese que desea tomar\n");
	printf("1. Te\t 2. cafe\t 3. cafe con leche\n");
	printf("\n");
 	fflush(stdin);
 	scanf("%d",pNuevo);
 
 	if((*pNuevo)!=0)
 	{
 		
 		*rNuevo=1;
 		
 	}

 }
